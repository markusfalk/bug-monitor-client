{
  "name": "bug-monitor-client-side",
  "version": "0.1.0",
  "description": "Client side script for tracking JS errors",
  "main": "dist/bug-monitor.client.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "node_modules/uglify-js/bin/uglifyjs --compress --mangle --output ./dist/bug-monitor.client.js ./src/bug-monitor-client.js --verbose",
    "build": "npm run uglify",
    "serve": "node_modules/serve/bin/serve.js .",
    "preversion": "npm run test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markusfalk/bug-monitor-client.git"
  },
  "author": "mail@markus.falk.com",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/markusfalk/bug-monitor-client/issues"
  },
  "homepage": "https://github.com/markusfalk/bug-monitor-client#readme",
  "devDependencies": {
    "eslint": "^3.19.0",
    "serve": "^5.1.5"
  }
}
